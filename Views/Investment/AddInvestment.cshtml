            $("#txtTotalDebit").val(totalDollerDebit);
            $("#txtRemainCredit").val(totalDollerDebit)
        }
        function creditMode() {
            $("#Debit").val(0);
            $("#txtRemainCredit").val(parseInt($("#txtTotalDebit").val()) + parseInt($("#Credit").val()));
        }
        function debitMode() {
            $("#Credit").val(0);
            var total = parseInt($("#txtTotalDebit").val());
            var debit = parseInt($("#Debit").val());
            var remain = total - debit;
            $("#txtRemainCredit").val(remain);
