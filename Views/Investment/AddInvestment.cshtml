            $("#DealerID").val($("#dealerid").val());
            $("#CurrencyID").val(1);
            $("#dealerid").val($("#dealerid").val());
            $("#txtTotalDebit").val(totalAfghaniDebit);
            $("#txtRemainCredit").val(totalAfghaniDebit);

